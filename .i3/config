# set $fb_color #60AEEE
# set $uf_color #2B303B
# set $ur_color #BF616A

# Set Solarized colors
set $bg_color #93a1a1
set $tx_color #586e75
set $fb_color #2aa198
set $uf_color #073642
set $ur_color #dc322f

# Set the colors for windows and borders
client.focused      $fb_color   $bg_color   $uf_color
client.unfocused    $uf_color   $uf_color   $tx_color
client.urgent       $ur_color   $ur_color   $uf_color

